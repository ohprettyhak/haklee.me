{
  "name": "@haklee/style",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --cache --cache-location 'node_modules/.cache/.eslintcache' --max-warnings 0",
    "lint:fix": "eslint . --fix --cache --cache-location 'node_modules/.cache/.eslintcache' --max-warnings 0",
    "check-types": "tsc --noEmit"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./global": {
      "types": "./dist/global.css.d.ts",
      "import": "./dist/global.css.js",
      "require": "./dist/global.css.js"
    },
    "./animation": {
      "types": "./dist/animation.css.d.ts",
      "import": "./dist/animation.css.js",
      "require": "./dist/animation.css.js"
    }
  },
  "dependencies": {
    "@vanilla-extract/css": "^1.17.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@haklee/eslint-config": "workspace:*",
    "@haklee/typescript-config": "workspace:*",
    "@types/node": "^22.14.0",
    "@types/react": "19.0.12",
    "@types/react-dom": "19.0.4",
    "eslint": "^9.24.0",
    "typescript": "5.8.2"
  }
}
